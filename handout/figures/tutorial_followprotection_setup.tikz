    \IfLanguage{ngerman}{Fernverkehr}
  };
  \draw[line width=1pt, fill=white] ([shift={(base)}]11.9,0.25) -- ++(-0.2,-0.2) -- ++(-1.7,0) -- ++(0,0.4) -- ++(1.7,0) -- cycle; % train
