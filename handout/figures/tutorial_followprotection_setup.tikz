  \draw[|<->|,>=latex,shorten >=2,shorten <=2] ([shift={(base)}] 7,0.85) -- ++(3,0) node[midway,fill=white] {8};
  \draw[|<->|,>=latex,shorten >=2,shorten <=2] ([shift={(base)}]12,0.85) -- ++(3,0) node[midway,fill=white] {15};
  
