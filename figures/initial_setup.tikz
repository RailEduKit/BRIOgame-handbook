  \draw [->] ([shift={(base)}] 5,1.4) -- ([shift={(base)}] 0.85,0.35) node [near start,align=right,fill=white] {
    \IfLanguage{english}{Train (direction of travel to the right)}
    \IfLanguage{ngerman}{Zug (Fahrtrichtung rechts)}
  };
